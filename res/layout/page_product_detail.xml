<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainAct" >

    <include layout="@layout/header_layout" />
	
    <FrameLayout 
        android:id="@+id/product_detail_fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/product_detail_ll_container_notify"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#483837" >

        <TextView
            android:id="@+id/product_detail_tv_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="fill_vertical"
            android:paddingLeft="25dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textStyle="bold"
            android:text="adfasdfsafsafasfsadfds\nasdfasfadwsfasdfasdf" />

        <Button
            android:id="@+id/product_detail_btn_notify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#191919"
            android:drawableLeft="@drawable/product_detail_btn_notify_icon"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:text="@string/product_detail_btn_notify_friend"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="bold"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>